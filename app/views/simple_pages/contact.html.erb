<section class="jumbo">
  <div class="jumbotron">
    <div class="container-fluid">
      <h1>Contact</h1>
    </div>
  </div>

  <hr >


  <div class="row-work anchor inner" id="contact">
    <div>
      <div class="container-fluid">
        <div class="row contact-row">
          <div class="col-md-6 col-sm-12 clist">
            <div class="conint">
              <h3 class="con_intro">Lorem ipsum dolor amet man braid kale chips organic...</h3>
              <p> gerstache vegan kitsch. Vice shaman schlitz readymade pok pok fam meditation organic direct trade messenger bag synth normcore you probably haven't heard of them vexillologist squid.  blog brunch vice chillwave tumeric 90's. Hashtag jianbing irony kogi, beard health goth tbh lumbersexual flexitarian tofu gochujang +1 wolf.</p>
            </div>
          </div>
          
          <div class="col-md-6 col-sm-12 clist">

            <%= flash[:notice] %>

            <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
            <div class="row">
              <div class="form-group">
                <%= form.label :name %>
                <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
              </div>
              <div class="form-group">
                <%= form.label :email %>
                <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
              </div>
              <div class="form-group">
                <%= form.label :message %>
                <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
              </div>
              <div>
              <%= form.submit "Send", class: "form_label btn-success conButt" %>
              <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
