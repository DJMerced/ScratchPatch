<p id="notice"><%= notice %></p>

<div>

  <p>
    <%= image_tag(@product.image_url, class: "img-responsive", width: 350) %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= image_tag(@product.image_url, width:'350', class: "img-responsive product_img img-zoom", data_zoom_images: @product.image_url) %>
  </p>

  <p>
    <strong>Colour:</strong>
    <%= @product.colour %>
  </p>

  <p>
    <strong>Price $:</strong>
    <%= @product.price %>
  </p>

  <p>
    <%= form_with(url: '/payments/create') do |form| %>
      <%= hidden_field_tag(:product_id, @product.id) %>
      <%= render partial: "shared/stripe_checkout_button" %>
    <% end %>
  </p>

  <p>Average Rating: <div class='rated' id="average-rating" data-score='<%= @product.average_rating %>'></div> </p>
</div>

<hr />

<div class="comm_section">
  <div class="newComments"><%= render 'new_comment' %></div>
  <div class="oldComments"><%= render 'comments' %></div>
</div>

<hr />


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
